# Use an official Python runtime as a parent image
FROM python:3.9-slim

# Install necessary dependencies
RUN apt-get update && apt-get install -y \
    wget \
    unzip \
    curl \
    gnupg \
    xvfb \
    --no-install-recommends

# Add Google's official GPG key
RUN curl -sSL https://dl.google.com/linux/linux_signing_key.pub | apt-key add -

# Set up the stable repository
RUN sh -c 'echo "deb [arch=amd64] http://dl.google.com/linux/chrome/deb/ stable main" >> /etc/apt/sources.list.d/google-chrome.list'

# Install Google Chrome
RUN apt-get update && apt-get install -y \
    google-chrome-stable \
    --no-install-recommends

# Get the latest ChromeDriver version
ARG CHROMEDRIVER_VERSION=`curl -sS chromedriver.storage.googleapis.com/LATEST_RELEASE`

# Download and install ChromeDriver
RUN wget -O /tmp/chromedriver.zip http://chromedriver.storage.googleapis.com/${CHROMEDRIVER_VERSION}/chromedriver_linux64.zip \
    && unzip /tmp/chromedriver.zip -d /usr/local/bin/ \
    && rm /tmp/chromedriver.zip

# Give execution permissions to ChromeDriver
RUN chmod +x /usr/local/bin/chromedriver

run apt-get install -y xvfb 

WORKDIR /app

COPY . /app

RUN pip install --no-cache-dir selenium pyautogui requests pyvirtualdisplay Xlib pyautogui flask 

# Run script
CMD [ "python", "index.py" ]