FROM python:3.9

# Install Chrome and necessary dependencies
RUN apt-get update && \
    apt-get install -y wget gnupg2 && \
    wget -q -O - https://dl-ssl.google.com/linux/linux_signing_key.pub | apt-key add - && \
    echo "deb [arch=amd64] http://dl.google.com/linux/chrome/deb/ stable main" >> /etc/apt/sources.list.d/google-chrome.list && \
    apt-get update && \
    apt-get install -y google-chrome-stable --no-install-recommends

ARG CHROMEDRIVER_VERSION=`curl -sS chromedriver.storage.googleapis.com/LATEST_RELEASE`
# Download ChromeDriver - CHANGE VERSION IF NECESSARY
RUN wget -q -O /tmp/chromedriver.zip https://chromedriver.storage.googleapis.com/${CHROMEDRIVER_VERSION}/chromedriver_linux64.zip
RUN unzip /tmp/chromedriver.zip -d /usr/local/bin/ 
RUN chmod +x /usr/bin/chromedriver

run apt-get install -y xvfb 

WORKDIR /app

COPY . /app

RUN pip install --no-cache-dir selenium pyautogui requests pyvirtualdisplay Xlib pyautogui flask 

# Run script
CMD [ "python", "index.py" ]
